@page "/counter"

<div class="container">
    <div class="wrapper">

        <p>Count: @currentCount</p>

        <button class="btn btn-primary" @onclick="IncrementCount">Click</button>
    </div>
</div>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }
}
