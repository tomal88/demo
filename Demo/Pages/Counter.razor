@page "/counter"

<div class="container">
    <div class="wrapper">

        <p>Count: @currentCount</p>

        <div class="counter-buttons">
            <span class="oi oi-minus" aria-hidden="true" @onclick="DecrementCount"></span>
            <span class="oi oi-plus" aria-hidden="true" @onclick="IncrementCount"></span>
        </div>
    </div>
</div>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }

    private void DecrementCount()
    {
        currentCount--;
    }
}
